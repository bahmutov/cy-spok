{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["cypress", "node"],
    "resolveJsonModule": true
  },
  "include": ["index.js", "index.d.ts", "cypress/**/*.js"],
  "exclude": ["node_modules"]
}
